### Create an appointment [POST /appointments]
+ Request

    + Headers

            Authorization: Bearer {accesstoken}
            cid: 05e230bf-a9cf-4b31-bc54-d3a995f62526

    + Body
    
            {
                "appointment": {
                    "servicesAccount": "919918239012",
                    "jobType": "ib",
                    "telephoneNumber": "0738123456",
                    "appointmentSlot": "1-2015-12-11T08:00:00+0000-2015-12-11T10:00:00+0000"
                },
                "meta": {
                    "appointmentPayload": "srx7t/fT2CajwcGXZ30kz/M3RyEs5RuelZ+qxavAbNokWG94AK8M2vmxjn7WAOhhE3CTTPMj/f7a8LF/DFv+Xw=="
                }
            }
            
+ Response 200 (application/json)
            
            {
                "status": "SUCCESS",
                "data": {
                    "appointment": {
                        "id": "567891011",
                        "servicesAccount": "919918239012",
                        "status": "booked",
                        "jobType": "ib",
                        "trackable": true,
                        "reschedulable": true,
                        "cancellable": true,
                        "telephoneNumber": "0738123456",
                        "appointmentSlot": "1-2015-12-11T08:00:00+0000-2015-12-11T10:00:00+0000",
                        "priority": false,
                        "faults": [
                            "F0057",
                            "F0008"
                        ]
                    }
                },
                "errors": [],
                "meta": {}
            }
            
+ Request CHI Appointment

    + Headers

            Authorization: Bearer {accesstoken}
            cid: 05e230bf-a9cf-4b31-bc54-d3a995f62526

    + Body
    
            {
                "appointment": {
                    "jobType": "chi",
                    "appointmentSlot": "a0Bw000000d6FtVEAU"
                },
                "meta": {
                    "prospect": "ebf62607-7aef-5501-ac18-c2ec8bfe563d",
                    "appointmentPayload": "srx7t/fT2CajwcGXZ30kz/M3RyEs5RuelZ+qxavAbNokWG94AK8M2vmxjn7WAOhhE3CTTPMj/f7a8LF/DFv+Xw=="
                }
            }

+ Response 200 (application/json)
            
            {
                "status": "SUCCESS",
                "data": {
                    "appointment": {
                        "id": "00617000007vkzjAAA",
                        "servicesAccount": "null",
                        "status": "booked",
                        "jobType": "chi",
                        "trackable": false,
                        "reschedulable": false,
                        "cancellable": false,
                        "telephoneNumber": '0738123456',
                        "appointmentSlot": "a0Bw000000d6FtVEAU",
                        "priority": false,
                        "faults": null
                    }
                },
                "errors": [],
                "meta": {}
            }

+ Response 401 (application/json)

            {
                "status": "FAIL",
                "data": {},
                "errors": [
                    {
                        "code": "authorize",
                        "message": "access_denied"
                    }
                ],
                "meta": {}
            }
            
+ Response 400 (application/json)

            {
                "status": "FAIL",
                "data": {},
                "errors": [
                    {
                        "code": "servicesAccount",
                        "message": "error.client.servicesAccount.invalid"
                    }
                ],
                "meta": {}
            }

+ Response 403 (application/json)
            
            {
                "status": "FAIL",
                "data": {},
                "errors": [
                    {
                        "code": "accountNumber",
                        "message": "error.client.accountNumber.invalid"
                    }
                ],
                "meta": {}
            }

+ Response 409 (application/json)
            
            {
                "status": "FAIL",
                "data": {},
                "errors": [
                    {
                        "code": "appointment",
                        "message": "error.server.appointment.booking.failed"
                    }
                ],
                "meta": {}
            }

+ Response 400 (application/json)
            
            {
                "status": "FAIL",
                "data": {},
                "errors": [
                    {
                        "code": "appointment",
                        "message": "error.appointment.already.booked"
                    }
