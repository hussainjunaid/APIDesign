                        {
                            "question": "question4",
                            "answers": [
                                "option2"
                            ]
                        },
                        {
                            "question": "question5",
                            "answers": [
                                "option2"
                            ]
                        }
                    ]
                }
            }
            
+ Response 200 (application/json)

            {
                "status": "SUCCESS",
                "data": {
                    "surveyResponse": {
                        "id": "OVh4NnpZUEdNNUxwZTBWRDI5czIxZz09_NjM4MDE2MTky",
