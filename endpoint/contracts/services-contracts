                "status": "FAIL",
                "data": {},
                "errors": [
                    {
                        "code": "productfeature",
                        "message": "error.client.feature.invalid"
                    }
                ],
                "meta": {}
            }
            
+ Response 500 (application/json)
        
            {
                "status": "FAIL",
                "data": {},
                "errors": [
                    {
                        "code": "server.error.internal",
                        "message": "An internal error while processing request."
                    }
                ],
                "meta": {}
            }
            
